<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.j39723.j39723_co5025_game">

    <application
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:ignore="GoogleAppIndexingWarning"
        android:allowBackup="true">

        <!-- Start of MainActivity -->
        <activity
            android:name=".MainActivity"
            android:label="@string/app_title_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <!-- End of MainActivity -->

        <!-- Start of GameActivity -->
        <activity
            android:name=".GameActivity"
            android:configChanges="orientation|screenSize|keyboardHidden|smallestScreenSize|screenLayout" >
        </activity>
        <!-- End of GameActivity -->

        <!-- Start of ScoreActivity -->
        <activity android:name=".ScoreActivity" />
        <!-- End of ScoreActivity -->

        <!-- Start of AboutActivity -->
        <activity
            android:name=".AboutActivity"
            android:label="@string/action_about"
            android:parentActivityName=".MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MainActivity" />
        </activity>
        <!-- End of AboutActivity -->

    </application>

</manifest>